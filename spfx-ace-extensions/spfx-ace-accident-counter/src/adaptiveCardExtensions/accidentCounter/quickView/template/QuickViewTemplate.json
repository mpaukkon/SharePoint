{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    
      {
          "type": "TextBlock",
          "wrap": true,
          "text": "${daysWithoutAccidents}",
          "size": "ExtraLarge",
          "horizontalAlignment": "Center",
          "weight": "Bolder",
          "color": "Dark"
      },
      {
          "type": "TextBlock",
          "size":"medium",
          "text": "${daysWithoutAccidentsText}",
          "wrap": true,
          "horizontalAlignment": "Center"
      },
      {
          "type": "TextBlock",
          "wrap": true,
          
          "text": "${accidentsThisMonth}",
          "horizontalAlignment": "Center"
      },
      {
          "type": "TextBlock",
          "text": "${accidentsThisYear}",
          "wrap": true,
          
          "horizontalAlignment": "Center"
      }
  ]
}